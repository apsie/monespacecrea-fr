{
  "name": "file-upload-monorepo",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "setup": "npm --prefix server install && npm --prefix client install",
    "dev": "concurrently \"npm:server\" \"npm:client\"",
    "server": "npm --prefix server run dev",
    "client": "npm --prefix client run dev",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f mongo"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.2"
  }
}
