# Server environment example
# Copy to .env and adjust as needed

# JWT
JWT_SECRET=change_me_in_production

# MongoDB (fallback)
MONGODB_URI=mongodb://127.0.0.1:27017/upload_db
MONGO_MEMORY=0

# MariaDB (primary)
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_DB=upload_app
MYSQL_USER=app
MYSQL_PASSWORD=app

# Enforce MariaDB presence (no fallback). Set to 1 to require SQL.
# SQL_REQUIRED=1

# SMTP (optional)
# SMTP_HOST=smtp.yourhost.com
# SMTP_PORT=587
# SMTP_USER=your_user
# SMTP_PASS=your_pass
# MAIL_FROM=no-reply@example.com
